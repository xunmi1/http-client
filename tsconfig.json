{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "baseUrl": "./",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "test/**/*"]
}
